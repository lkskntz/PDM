<?xml version="1.0"?>
<robot name="simple_wall">

  <link name="wall_link">

    <!-- Visual -->
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <!-- width (x), thickness (y), height (z) -->
        <box size="1.0 0.05 2.0"/>  <!-- width, thickness, height -->
      </geometry>
      <material name="wall_color">
        <color rgba="0.8 0.8 0.8 0.5"/> <!-- last value for opacity: 1.0 = opaque, 0 = invisible -->
      </material>
    </visual>

    <!-- Collision  -->
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="1.0 0.05 2.0"/> <!-- same dims as visual -->
      </geometry>
    </collision>

    <!-- Inertia (not important because fixed object, but required) -->
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="1.0"/>
      <inertia ixx="0.001" ixy="0" ixz="0"
               iyy="0.001" iyz="0"
               izz="0.001"/>
    </inertial>

  </link>

</robot>
